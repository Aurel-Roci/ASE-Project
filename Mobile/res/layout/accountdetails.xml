<?xml version="1.0" encoding="utf-8"?>

<TableLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent" 
    android:layout_width="fill_parent"
    android:background="#000044"
>
    
    <TableRow> 
        <TextView 
            android:text="User Picture:"
            android:width ="200px"
        />
        <ImageView 
            android:id="@+id/imgUserPicture" 
            android:width="300px" 
            android:height="300px" 
        />
    </TableRow> 
    
    <TableRow> 
        <TextView 
            android:text="Username:"
            android:width ="200px"
        />
        <TextView 
            android:id="@+id/lblUsername" 
            android:width="200px" 
            android:text="n/a"
        />
    </TableRow>  

    <TableRow> 
        <TextView 
            android:text="Address:"
            android:width ="200px"
        />
        <TextView 
            android:id="@+id/lblAddress" 
            android:width="200px"
            android:text="n/a" 
        />
    </TableRow>  
    
    <TableRow> 
        <TextView 
            android:text="Account Type:"
            android:width ="200px"
        />
        <TextView 
            android:id="@+id/lblAccountType" 
            android:width="200px"
            android:text="n/a" 
        />
    </TableRow>  
    
    <TableRow> 
        <TextView 
            android:text="Account Balance:"
            android:width ="200px"
        />
        <TextView 
            android:id="@+id/lblAccountBalance" 
            android:width="200px"
            android:text="n/a" 
        />
    </TableRow>  

</TableLayout>